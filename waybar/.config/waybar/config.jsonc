{
    "layer": "top",
    "position": "top",
    "height": 30,
    "modules-left": [
        "custom/logo",
        "hyprland/workspaces",
        "wlr/taskbar"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "pulseaudio/slider",
        "bluetooth",
        "cpu",
        "memory",
        "battery",
        "tray",
        "clock"
    ],
    "custom/logo": {
        "format": "     {}     ",
        "exec": "~/dotfiles/scripts/random_emoji.bash",
        "tooltip": "false",
        "interval": 120,
        "on-click": "exec fuzzel"
    },
    "hyprland/workspaces": {
        "window-rewrite": {},
        "format": "{name}{icon}  ",
        "format-icons": {
            "1": ":  ÔÑ†",
            "4": ":  @",
            "5": ":  Û∞ç°",
            "default": ""
        },
        "persistent-workspaces": {
            "HDMI-A-1": [
                1
            ],
            "DP-4": [
                4,
                5
            ]
        }
    },
    "hyprland/window": {
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": "üåé $1",
            "Alacritty": "ÔÑ† "
        },
        "separate-outputs": true
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "Û∞•î   {:%H:%M   Û∞ÉÆ   %Y-%m-%d}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "Ôãõ  {usage}% {icon} ",
        "format-icons": [
            "‚ñÅ",
            "‚ñÇ",
            "‚ñÉ",
            "‚ñÑ",
            "‚ñÖ",
            "‚ñÜ",
            "‚ñá",
            "‚ñà"
        ]
    },
    "memory": {
        "format": "ÔÉâ   {}% "
    },
    "battery": {
        "bat": "BAT0",
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}  {capacity}% ",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) Ôá´  ",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} ÔÉÅ  ",
        "format-disconnected": "Disconnected ‚ö†  "
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "Û∞ùü",
        "format-icons": {
            "headphone": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "bluetooth": {
        "format": "Ôäî {status}  ",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": "Ôäî {num_connections} connected  ",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },
    "wlr/taskbar": {
        "format": "{icon} {title:15}",
        "icon-size": 14,
        "icon-theme": "Numix-Circle",
        "tooltip": "false",
        "on-click": "activate",
        "on-click-middle": "minimize",
        "rewrite": {
            "(.*) ‚Äî Mozilla Firefox": " Firefox"
        }
    }
}
